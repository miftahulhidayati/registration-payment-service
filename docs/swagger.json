{
    "swagger": "2.0",
    "info": {
        "description": "API for managing event registrations and payments. This service handles event registrations, payment processing, and user management with Kafka integration.",
        "title": "Registration Payment Service API",
        "contact": {
            "name": "Registration Payment Service",
            "email": "support@example.com"
        },
        "version": "1.0"
    },
    "host": "localhost:3003",
    "basePath": "/api/v1",
    "paths": {
        "/registrations": {
            "get": {
                "description": "Get a list of registrations with pagination",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "registrations"
                ],
                "summary": "List registrations",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/repository.Registration"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "post": {
                "description": "Register a user for an event",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "registrations"
                ],
                "summary": "Create a new registration",
                "parameters": [
                    {
                        "description": "Registration Request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.createRegistrationRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/repository.Registration"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/registrations/{id}": {
            "get": {
                "description": "Get details of a specific registration",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "registrations"
                ],
                "summary": "Get a registration by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Registration ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/repository.Registration"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "put": {
                "description": "Update details of an existing registration",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "registrations"
                ],
                "summary": "Update a registration",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Registration ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Update Request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.updateRegistrationRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/repository.Registration"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/registrations/{id}/cancel": {
            "post": {
                "description": "Cancel a registration with a reason",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "registrations"
                ],
                "summary": "Cancel a registration",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Registration ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Cancel Request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.cancelRequest"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/registrations/{id}/payment": {
            "get": {
                "description": "Get payment status and details",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payments"
                ],
                "summary": "Get payment info",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Registration ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handlers.paymentInfo"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "post": {
                "description": "Upload proof of payment for a registration",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payments"
                ],
                "summary": "Upload payment proof",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Registration ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Payment Proof",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.paymentRequest"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Accepted",
                        "schema": {
                            "$ref": "#/definitions/handlers.paymentResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/registrations/{id}/payment/verify": {
            "patch": {
                "description": "Verify and approve a payment",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payments"
                ],
                "summary": "Verify payment",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Registration ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handlers.verifyResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handlers.cancelRequest": {
            "type": "object",
            "required": ["reason"],
            "properties": {
                "reason": {
                    "type": "string",
                    "example": "Testing cancellation",
                    "description": "Reason for cancelling the registration"
                }
            }
        },
        "handlers.createRegistrationRequest": {
            "type": "object",
            "required": ["event_id", "full_name", "gender", "phone", "email"],
            "properties": {
                "address": {
                    "type": "string",
                    "example": "Test Address",
                    "description": "User's address"
                },
                "email": {
                    "type": "string",
                    "example": "test@example.com",
                    "format": "email",
                    "description": "User's email address"
                },
                "emergency_contact_name": {
                    "type": "string",
                    "example": "Emergency Contact",
                    "description": "Name of emergency contact person"
                },
                "emergency_contact_phone": {
                    "type": "string",
                    "example": "08123456788",
                    "description": "Emergency contact phone number"
                },
                "emergency_contact_relation": {
                    "type": "string",
                    "example": "friend",
                    "description": "Relationship to emergency contact"
                },
                "event_id": {
                    "type": "string",
                    "example": "00000000-0000-0000-0000-000000000001",
                    "format": "uuid",
                    "description": "Event UUID to register for"
                },
                "full_name": {
                    "type": "string",
                    "example": "Test User",
                    "description": "Full name of the registrant"
                },
                "gender": {
                    "type": "string",
                    "example": "male",
                    "enum": ["male", "female"],
                    "description": "Gender of the registrant"
                },
                "phone": {
                    "type": "string",
                    "example": "08123456789",
                    "description": "Phone number of the registrant"
                },
                "special_needs": {
                    "type": "string",
                    "example": "None",
                    "description": "Any special needs or accommodations required"
                },
                "user_id": {
                    "type": "string",
                    "example": "00000000-0000-0000-0000-000000000003",
                    "format": "uuid",
                    "description": "Optional user UUID if registrant is an existing user"
                }
            }
        },
        "handlers.updateRegistrationRequest": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string",
                    "example": "Updated Address",
                    "description": "Updated address"
                },
                "email": {
                    "type": "string",
                    "example": "updated@example.com",
                    "format": "email",
                    "description": "Updated email address"
                },
                "emergency_contact_name": {
                    "type": "string",
                    "example": "Updated Emergency Contact",
                    "description": "Updated emergency contact name"
                },
                "emergency_contact_phone": {
                    "type": "string",
                    "example": "08123456799",
                    "description": "Updated emergency contact phone"
                },
                "emergency_contact_relation": {
                    "type": "string",
                    "example": "spouse",
                    "description": "Updated relationship to emergency contact"
                },
                "full_name": {
                    "type": "string",
                    "example": "Test User Updated",
                    "description": "Updated full name"
                },
                "notes": {
                    "type": "string",
                    "example": "Additional notes",
                    "description": "Additional notes for the registration"
                },
                "phone": {
                    "type": "string",
                    "example": "08123456790",
                    "description": "Updated phone number"
                },
                "special_needs": {
                    "type": "string",
                    "example": "Wheelchair access",
                    "description": "Updated special needs"
                }
            }
        },
        "handlers.paymentRequest": {
            "type": "object",
            "required": ["amount", "payment_proof_url"],
            "properties": {
                "amount": {
                    "type": "number",
                    "format": "float64",
                    "example": 150000,
                    "description": "Payment amount in Indonesian Rupiah"
                },
                "payment_proof_url": {
                    "type": "string",
                    "example": "https://example.com/proof.jpg",
                    "description": "URL to payment proof image"
                }
            }
        },
        "handlers.paymentResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "payment uploaded",
                    "description": "Status of the payment upload"
                },
                "message": {
                    "type": "string",
                    "example": "Payment proof has been uploaded successfully",
                    "description": "Success message"
                }
            }
        },
        "handlers.paymentInfo": {
            "type": "object",
            "properties": {
                "registration_id": {
                    "type": "string",
                    "example": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
                    "description": "Registration UUID"
                },
                "payment": {
                    "type": "object",
                    "properties": {
                        "status": {
                            "type": "string",
                            "example": "pending",
                            "enum": ["pending", "verified", "rejected"],
                            "description": "Payment verification status"
                        },
                        "amount": {
                            "type": "number",
                            "format": "float64",
                            "example": 150000,
                            "description": "Payment amount"
                        },
                        "proof_url": {
                            "type": "string",
                            "example": "https://example.com/proof.jpg",
                            "description": "URL to payment proof"
                        },
                        "uploaded_at": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2025-11-24T10:00:00Z",
                            "description": "Timestamp when payment was uploaded"
                        }
                    }
                }
            }
        },
        "handlers.verifyResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "verified",
                    "description": "Verification status"
                },
                "message": {
                    "type": "string",
                    "example": "Payment has been verified successfully",
                    "description": "Success message"
                }
            }
        },
        "repository.Registration": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string",
                    "example": "Test Address",
                    "description": "Registrant's address"
                },
                "cancellation_reason": {
                    "type": "string",
                    "example": "Change of plans",
                    "description": "Reason for cancellation if cancelled"
                },
                "cancelled_at": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-24T10:30:00Z",
                    "description": "Timestamp when registration was cancelled"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-24T09:00:00Z",
                    "description": "Timestamp when registration was created"
                },
                "email": {
                    "type": "string",
                    "example": "test@example.com",
                    "format": "email",
                    "description": "Registrant's email"
                },
                "emergency_contact_name": {
                    "type": "string",
                    "example": "Emergency Contact",
                    "description": "Emergency contact name"
                },
                "emergency_contact_phone": {
                    "type": "string",
                    "example": "08123456788",
                    "description": "Emergency contact phone"
                },
                "emergency_contact_relation": {
                    "type": "string",
                    "example": "friend",
                    "description": "Relationship to emergency contact"
                },
                "event_id": {
                    "type": "string",
                    "example": "00000000-0000-0000-0000-000000000001",
                    "format": "uuid",
                    "description": "Event UUID"
                },
                "full_name": {
                    "type": "string",
                    "example": "Test User",
                    "description": "Registrant's full name"
                },
                "gender": {
                    "type": "string",
                    "example": "male",
                    "enum": ["male", "female"],
                    "description": "Registrant's gender"
                },
                "notes": {
                    "type": "string",
                    "example": "Additional registration notes",
                    "description": "Additional notes"
                },
                "phone": {
                    "type": "string",
                    "example": "08123456789",
                    "description": "Registrant's phone number"
                },
                "registration_date": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-24T09:00:00Z",
                    "description": "Registration date"
                },
                "registration_id": {
                    "type": "string",
                    "example": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
                    "format": "uuid",
                    "description": "Unique registration UUID"
                },
                "special_needs": {
                    "type": "string",
                    "example": "None",
                    "description": "Special needs or accommodations"
                },
                "status": {
                    "type": "string",
                    "example": "pending",
                    "enum": ["pending", "confirmed", "cancelled"],
                    "description": "Registration status"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-24T09:30:00Z",
                    "description": "Last update timestamp"
                },
                "user_id": {
                    "type": "string",
                    "example": "00000000-0000-0000-0000-000000000003",
                    "format": "uuid",
                    "description": "User UUID if linked to existing user"
                }
            }
        }
    }
}